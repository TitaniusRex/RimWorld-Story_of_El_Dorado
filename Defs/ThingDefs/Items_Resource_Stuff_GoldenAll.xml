<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<ThingDef ParentName="ResourceBase">
		<defName>SoED_GoldLeaf</defName>
		<label>gold leaf</label>
		<description>Gold rolled into a thin layer.</description>
		<graphicData>
			<texPath>Things/Item/Resource/GoldLeaf</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(255,235,122)</color>
		</graphicData>
		<stackLimit>600</stackLimit>
		<statBases>
			<MarketValue>0.67</MarketValue>
			<MaxHitPoints>5</MaxHitPoints>
			<Mass>0.0005</Mass>
			<Flammability>0.5</Flammability>
			<DeteriorationRate>0.1</DeteriorationRate>
		</statBases>
		<burnableByRecipe>false</burnableByRecipe>
		<healthAffectsPrice>false</healthAffectsPrice>
		<stuffProps>
			<stuffAdjective>golden</stuffAdjective>
			<commonality>0.0005</commonality>
			<color>(255,235,122)</color>
			<constructEffect>ConstructMetal</constructEffect>
			<soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
			<soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
			<statOffsets>
				<Beauty>11</Beauty>
			</statOffsets>
			<statFactors>
				<Beauty>20</Beauty>
			</statFactors>
		</stuffProps>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>

