<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<ThingDef ParentName="ApparelNoQualityBase">
		<defName>Apparel_SoEDGoldSkin</defName>
		<label>gold skin</label>
		<description>Rolled gold, enough to cover the body. Healing agents are attributed, but this is not so. Titled persons will be happy. Wear in lieu of underwear.</description>
	    <possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/SoED_Greed/Greed</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.85</drawSize>
			<color>(255,235,122)</color>
		</graphicData>
		<costList>
			<SoED_GoldWaste>85</SoED_GoldWaste>
	</costList>
		<thingCategories>
			<li>ApparelNoble</li>
		</thingCategories>
		<costStuffCount>100</costStuffCount>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<WorkToMake>800</WorkToMake>
			<Mass>0.1</Mass>
			<EquipDelay>30</EquipDelay>
		</statBases>	
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>210</displayPriority>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>TableSculpting</li>
			</recipeUsers>
		</recipeMaker>
		<healthAffectsPrice>false</healthAffectsPrice>
		<equippedStatOffsets>
			<SocialImpact>0.4</SocialImpact>
			<TameAnimalChance>0.4</TameAnimalChance>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.9</SlaveSuppressionOffset>
			<MoveSpeed>-0.1</MoveSpeed>
			<PawnBeauty>1</PawnBeauty>
		</equippedStatOffsets>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/SoED_Greed/Greed</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Medieval</li>
				<li>Royal</li>
				<li>RoyalTier2</li>
				<li>RoyalTier5</li>
				<li>RoyalTier6</li>
			</tags>
			<defaultOutfitTags>
				<li>Royal</li>
			</defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>

